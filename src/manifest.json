{
  "manifest_version": 2,
  "name": "League of legends Build Manager",
  "description": "Chrome extension for League of Legends Build Manager application",
  "version": "0.1",

  "icons": {
    "16": "images/icons/icon-16.png",
    "32": "images/icons/icon-32.png",
    "128": "images/icons/icon-128.png",
    "256": "images/icons/icon-256.png"
  },

  "page_action": {
    "default_icon": {
      "19": "images/icons/icon-16.png",
      "38": "images/icons/icon-32.png"
    },
    "default_title": "Send guide to the League of Legends Builder Manager"
  },
  
  "background": {
    "scripts": ["javascripts/background.js"]
  },

  "permissions": [
    "tabs"
  ],

  "offline_enabled": false

}